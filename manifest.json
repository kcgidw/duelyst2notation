{
	"manifest_version": 3,
	"name": "Duelyst 2 Notation",
	"description": "Board notation overlay for Duelyst 2",
	"version": "0.0.1",
	"action": {
		"default_popup": "settings.html"
	},
	"content_scripts": [
		{
			"matches": ["https://play.duelyst2.com/", "https://duelyst.gg/"],
			"js": ["notation.js"]
		}
	],
	"permissions": ["tabs", "storage"],
	"host_permissions": ["https://play.duelyst2.com/", "https://duelyst.gg/"]
}
